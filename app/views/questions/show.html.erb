<div class="container">
  <div class="lead well">
    <div class="media">
      <div class="media-left">
        <a href="#">
          <img class="media-object" src="<%= @question.gravatar %>" alt="placeholder">
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= @question.email %> asked:</h4>
        <%= @question.body %>
      </div>
    </div>
    <div class="text-right">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#new-answer-modal">
        Submit new answer
      </button>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">

      <h4>Answers:</h4>

      <ul class="media-list">
        <% @answers.each do |answer| %>
          <li class="media">
            <div class="media-left">
              <a href="#">
                <img class="media-object" src="<%= answer.gravatar %>" alt="placeholder">
              </a>
            </div>
            <div class="media-body">
              <h4 class="media-heading"><%= answer.email %> answered:  <br> <small><%= time_ago_in_words answer.created_at %> ago</small></h4>
              <%= answer.body %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<%= render 'home/new_answer_form' %>