<h1>Latest Questions:</h1>

<hr>

<ul class="media-list">
  <% @questions.each do |q| %>
  <li class="media">
    <div class="media-left">
      <a href="#">
        <img class="media-object" src="<%= q.gravatar %>" alt="placeholder">
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= q.email %> asked:</h4>
      <%= q.body %>
      <div><a href="/questions/12" class="btn btn-success btn-xs">View Answers</a></div>
    </div>
  </li>
  <% end %>
</ul>
