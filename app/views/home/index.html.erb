<h1>Latest Questions:</h1>

<hr>

<ul class="media-list">
  <% @questions.each do |q| %>
    <li class="media">
      <div class="media-left">
        <a href="#">
          <img class="media-object" src="<%= q.gravatar %>" alt="placeholder">
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= q.email %> asked: <br>
          <small><%= time_ago_in_words q.created_at %> ago</small>
        </h4>
        <%= q.body %>
        <div>
          <a href="<%= question_path(q) %>" class="btn btn-success btn-xs">View Answers</a>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<% if @questions.empty? %>
  <div class="alert alert-info text-center">
    <h3>No questions yet <br><small class="secondary">¯\_(ツ)_/¯</small></h3>

    <button role="button" class="btn btn-success" data-toggle="modal" data-target="#new-question-modal">Ask a Question</button>
  </div>
<% end %>
